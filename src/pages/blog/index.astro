---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await Astro.glob('../blog/*.md');
---

<Layout title="Bakery Bliss Blog">

  <section class="py-16 max-w-4xl mx-auto px-4">
    <h1 class="text-4xl font-bold mb-10 text-pink-700 text-center">Bakery Bliss Blog</h1>

    <ul class="space-y-8">
      {allPosts.map(post => (
        <li class="bg-white shadow-md rounded-lg p-6">
          <a href={post.url} class="text-2xl font-bold text-pink-700 hover:underline">{post.frontmatter.title}</a>
          <p class="text-sm text-gray-500 mb-2">{new Date(post.frontmatter.pubDate).toLocaleDateString()}</p>
          <p class="text-gray-700">{post.frontmatter.description}</p>
        </li>
      ))}
    </ul>
  </section>

</Layout>
